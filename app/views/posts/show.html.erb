	<h1 class="title">
		<%= @post.title %>
	</h1>


	<p>
		<%= @post.category.title %> </p>


	<p class_"date">
		Submitted <%= time_ago_in_words(@post.created_at) %> Ago
		<% if user_signed_in? %>
			| <%= link_to 'Edit', edit_post_path(@post) %>
			| <%= link_to 'Delete', post_path(@post), method: :delete, data: { confirm: 'jesteÅ› pewien?'} %>
		<% end %>
	</p>

	<p class="body"><%= @post.body %></p>
	<!-- <p class="comment"><%= @post.body %></p> -->

	<div id="comments">
		<h2><%= @post.comments.count %> Komentarze</h2>
		<%= render @post.comments %>

		<h3>Dodaj komentarz:</h3>
		<%= render "comments/form" %>

	</div>

